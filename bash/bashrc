alias brc='vim ~/.dotfiles/bash/bashrc'
function c() { local dir;dir=$(find ${1:-.} \( -path '*/\.*' -o -path '*/node_modules*' -o -path '*/bower_components*' \) -prune -o -type d -print 2> /dev/null | fzf +m) && cd "$dir"; }
